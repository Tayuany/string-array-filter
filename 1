import java.util.Arrays;

public class StringArrayFilter {

    public static String[] filterStrings(String[] array) {
        int count = 0;
        for (String str : array) {
            if (str.length() <= 3) {
                count++;
            }
        }
        
        String[] result = new String[count];
        int index = 0;
        for (String str : array) {
            if (str.length() <= 3) {
                result[index++] = str;
            }
        }
        return result;
    }

    public static void main(String[] args) {
        // Входной массив строк
        String[] inputArray = {"Hello", "2", "world", ":-)"};

        // Фильтрация массива строк
        String[] outputArray = filterStrings(inputArray);

        // Вывод результата
        System.out.println("Input array: " + Arrays.toString(inputArray));
        System.out.println("Output array: " + Arrays.toString(outputArray));
    }
}
